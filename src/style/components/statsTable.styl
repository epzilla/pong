.stats-table {
  display: flex;
  flex-direction: column;
  justify-content: top;
  border: 1px solid #CCC;

  .stats-table-row-wrapper {
    flex-direction: column;
    justify-content: top;
    border: 1px solid #CCC;
    border-top: none;

    &:last-child {
      border-bottom: none;
    }
  }

  .stats-table-row {
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: 0 1rem;
    font-size: 1.25rem;
    position: relative;
    z-index: 1;

    &:hover {
      background-color: #F1F1F1;
    }

    &.expanded {
      background-color: #CADFF2;
    }

    .date-span {
      margin-right: auto;
      flex-shrink: 0;
      width: 4rem;

      font-size: 12px;
      color: #9C9C9C;
    }

    .team-block {
      display: flex;
      justify-content: flex-start;
      align-items: center;
      flex-grow: 1;
      width: 40%;

      &:first-of-type {
        justify-content: flex-end;
      }
    }

    .team-badge {
      width: 50px;
      height: 50px;
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
      margin: 1rem;
    }

    .team-name {
      display: none;

      &.team-name-smallest {
        display: inline;
      }

      @media screen and (min-width: 650px) {
        &.team-name-smallest {
          display: none;
        }

        &.team-name-smaller {
          display: inline;
        }
      }

      @media screen and (min-width: 750px) {
        &.team-name-smaller {
          display: none;
        }

        &.team-name-small {
          display: inline;
        }
      }

      @media screen and (min-width: 950px) {
        &.team-name-small {
          display: none;
        }

        &.team-name-full {
          display: inline;
        }
      }
    }

    .score-line {
      flex-shrink: 0;

      * {
        margin: 0 0.5rem;
      }
    }

    @media screen and (max-width: 450px) {
      .team-name,
      .score-line {
        font-size: 14px;
      }

      .team-badge {
        margin: 1rem 0.25rem;
      }

      .team-name {
        margin-right: 0.25rem;
      }
    }

    @media screen and (max-width: 350px) {
      .team-name,
      .score-line {
        font-size: 14px;
      }

      .team-badge {
        margin: 1rem 0.25rem;
      }

      .score-line * {
        margin: 0 0.25rem;
      }

      .team-name {
        margin-right: 0.25rem;
      }
    }
  }
}