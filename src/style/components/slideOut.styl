.slide-out {
  position: fixed;
  top: 56px;
  left: 0;
  bottom: 0;
  height: calc(100% - 56px);
  width: 25%;
  min-width: 250px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2rem 1rem;
  background: white;
  border-right: 1px solid rgba(0, 0, 0, 0.2);
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  border-top: 1px solid rgba(0, 0, 0, 0.2);
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
  z-index: 48;

  h1, h2, h3, h4, h5 {
    margin: 0.5rem 0 0 0;
    text-align: center;
  }

  img {
    border-radius: 4px;
  }

  .btn {
    margin-left: 1rem;
  }
}

.slide-out-enter {
  transform: translateX(-100%);
}

.slide-out-appear.slide-out-appear-active, .slide-out-enter.slide-out-enter-active {
  transform: translateX(0);
  transition: transform 0.2s ease;
}

.slide-out-leave {
  transform: translateX(0);
}

.slide-out-leave.slide-out-leave-active {
  transform: translateX(-100%);
  transition: transform 0.2s ease;
}

.slide-out.editable-slide-out {
  img {
    width: 100%;
  }
}

.edit-row {
  margin: 0 0 1rem 0;
  width: 100%;
  flex-wrap: nowrap;
  > .flex-col {
    width: 33.3333%;
  }

  .flex-col {
    padding: 0.25rem;
    position: relative;

    input,
    label,
    select {
      flex-grow: 1;
      flex-shrink: 0;
    }

    select {
      height: 36px;
    }

    > input {
      height: 36px;
      padding-left: 0.5rem;
    }
  }
}

@media (min-width: 800px) {
  .slide-out {
    min-width: 450px;
  }
}