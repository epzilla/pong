.dismiss-btn, .delete-btn {
  border: none;
  background: transparent;
  color: var(--disabledColor);
  outline: none;
  font-size: 1.5rem;
  height: 30px;
  width: 30px;
  line-height: 0;
  cursor: pointer;
}

.dismiss-btn {
  padding: 0;
  font-size: 2.5rem;
  position: absolute;
  top: 1rem;
  right: 0.5rem;
}

.btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 0;
  font-weight: 400;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  background-image: none;
  background-color: white;
  border: 1px solid var(--disabledColor);
  color: #333;
  padding: 10px;
  font-size: 14px;
  height: 34px;
  line-height: 1;
  user-select: none;
  border-radius: 3px;
  text-decoration: none;
  white-space: normal;

  @media screen and (min-width: 400px) {
    max-width: 50vw;
  }

  &.primary {
    background-color: var(--primaryBtnBg);
    border: none;
    color: var(--primaryBtnText);
  }

  &.secondary {
    background-color: var(--secondaryBtnBg);
    border: none;
    color: var(--secondaryBtnText);
  }

  &.success {
    background-color: #1b9a1b;
    color: white;
    text-decoration: none;
  }

  &.big {
    height: 50px;
    font-size: 1.25rem;
    padding: 12px;
  }

  &.success.big {
    min-width: 100px;
  }

  &.update-score {
    margin: 1rem auto;
  }

  .fa {
    margin-right: 0.5rem;
  }
}

.btn.faux-expandable {
  border: none;
  height: 3rem;
  margin: 0 auto 1rem 0.75rem;
  padding: 0 0 0 0;
  display: flex;
  align-items: center;
  position: relative;
  background: transparent;
  color: #1b9a1b;

  span {
    font-weight: 700;
    font-size: 1.17rem;
    font-family: var(--mainFont);
  }

  .fa {
    font-size: 2.2rem;
  }
}