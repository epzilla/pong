.stepper {
  position: relative;
  height: 10em;
  width: 5em;
  display: inline-block;
  font-weight: bold;
  margin-right: 1em;
  .btn {
    position: absolute;
    font-weight: bold;
    width: 100%;
    height: 3em;
    i {
      margin-right: 0;
    }
  }
  .top-btn {
    top: 0;
  }
  .bottom-btn {
    position: absolute;
    bottom: 0;
  }
  span {
    position: absolute;
    width: 100%;
    text-align: center;
    font-size: 2em;
    width: 100%;
    height: 2em;
    top: 1.88em;
    left: 0;
    padding-top: 0;
  }
}

.frac-stepper-label {
  display: inline-flex;
  position: absolute;
  font-weight: bold;
  height: 5em;
  font-size: 2em;
  padding-left: 0.5em;
  justify-content: center;
  align-items: center;
}

.filter-stepper {
  margin-bottom: 1em;
  h4 {
    width: 5em;
    text-align: center;
  }
  .btn-filter-stepper {
    background: var(--primaryBtnBg);
    width: 50px;
    height: 50px;
    border-radius: 5px;
    color: white;
    font-size: 32px;
    padding: 0 9px;
  }
}

@media(max-width: 750px) {
  .filter-stepper {
    .btn-filter-stepper {
      width: 35px;
      height: 35px;
      border-radius: 3px;
      font-size: 20px;
    }
  }
}

.stepper-with-label {
  position: relative;
  height: 10em;
  display: flex;
  align-items: center;
}