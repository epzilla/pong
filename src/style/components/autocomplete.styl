.autocomplete {
  position: relative;
  width: 140px;

  input {
    height: 36px;
    padding: 5px;
    width: 100%;
    border-radius: 4px;
    border: none;
  }

  .options-dropdown {
    position: absolute;
    margin: 0;
    padding: 0;
    list-style-type: none;
    background-color: white;
    border: 1px solid #CCC;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
    width: 100%;
    z-index: 1;

    .option {
      display: flex;
      align-items: center;
      font-size: 14px;
      padding: 8px 5px;

      &.highlighted {
        background-color: #CADFF2;
      }

      .team-logo {
        margin-right: 5px;
      }
    }
  }
}