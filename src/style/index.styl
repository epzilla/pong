@import url('//fonts.googleapis.com/css?family=Montserrat:800|Lato:300,400,700,900,400italic|Sanchez|Press+Start+2P');
@import '/style/font-awesome-4.7.0/css/font-awesome.min.css';
@import 'components';
@import 'views';

* {
	box-sizing: border-box;
	--mainFont: 'Lato', -apple-system, BlinkMacSystemFont, sytem-ui, 'Helvetica Neue', arial, sans-serif;
	--subtle-shadow: 0 1px 2px 0 rgba(0,0,0,0.1), 0 4px 8px 0 rgba(0,0,0,0.2);
	--subtle-shadow-up: 0 -1px 2px 0 rgba(0,0,0,0.1), 0 -4px 8px 0 rgba(0,0,0,0.2);
}

html, body {
	height: 100%;
	width: 100%;
	padding: 0;
	margin: 0;
	background: var(--pageBg);
	font-family: var(--mainFont);
	font-weight: 400;
	color: var(--colorDefaultText);
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

input, textarea, select, button {
	font-family: var(--mainFont);
}

input[type='submit'] {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
}

button {
	margin: 0;
}

.main {
	padding: 56px 1em 1em 1em;
	min-height: calc(100% - 110px - 3rem);
	width: 100%;
  max-width: 100vw;
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;

	> h1 {
		text-align: center;
	}

	@media (min-width: 1000px) {
		max-width: 95%;
		margin: 0 auto;

		&.depth, &.admin {
			max-width: unset;
		}
	}

	@media (max-width: 600px) {
		padding: 56px 0.25rem 1rem 0.25rem;
    min-height: 100vh;
	}
}

h1 {
	color: var(--primary);
  font-family: var(--blockFont);
}

#app {
  height: 100%;
}

.form-group {
	display: flex;
	flex-direction: column;
	margin-bottom: 0.5em;

	label {
		margin-bottom: 0.5em;
	}

	label {
		color: var(--primary);
	}

	input {
		height: 40px;
		border-radius: 4px;
		border: 1px solid var(--primary);
		padding: 0 0.5em;
	}
}

.jumbotron {
	background-color: #EEE;
	border-radius: 4px;
	margin: 1rem;
	padding: 0.5rem 1.5rem;

	h1 {
		font-size: 2rem;
		text-align: center;
		font-weight: 500;
		margin-bottom: 0;

		@media (min-width: 800px) {
			font-size: 4rem;
		}
	}

	.lede {
		color: var(--primary);
		font-size: 1rem;
		margin: 0.5rem 0;
	}
}

@media (min-width: 800px) {
	.jumbotron {
		padding: 1rem 2rem;

		h1 {
			font-size: 4rem;
		}

		.lede {
			margin: 1rem 0;
			font-size: 1.5rem;
		}
	}
}

.form-group	input::-webkit-input-placeholder {
	color: var(--colorDisabledText);
}

.form-group	input::-moz-placeholder {
	color: var(--colorDisabledText);
}

.form-group	input:-moz-placeholder {
	color: var(--colorDisabledText);
}

.form-group	input::-ms-input-placeholder {
	color: var(--colorDisabledText);
}

.form-group.big {

	label {
		font-size: 1.25rem;
	}

	input {
		font-size: 2rem;
		height: 4rem;
		padding: 0.5rem;
	}
}

.footer {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin: 2rem 1rem 0;
	padding: 1rem;
	border-top: 1px solid #e5e5e5

	img {
		max-height: 50px;
	}

	.footer-text {
		text-transform: uppercase;
		color: var(--footerTextColor);
		font-family: var(--blockFont);
		font-size: 24px;
		font-weight: 500;
		margin: 10px 0 0 0;
	}
}

.Select {
	min-width: 80px;
	max-width: 350px;

	.Select-input {
		box-sizing: border-box !important;
	}

	.Select-input > input {
		height: 100%;
		border: none;
		margin: 0;
	}
}

hr {
	border-top: 1px solid #EEE;
	width: calc(100% - 2rem);
	margin-left: 1rem;
	margin-right: 1rem;
}

.fa {
	margin: 0.25rem;
}