.main.new-match {
  display: flex;
  flex-direction: column;
  align-items: center;

  hr {
    width: 400px;
    max-width: 95%;
    margin-bottom: 2rem;
    margin-top: 2rem;
  }

  .match-settings {
    .label {
      font-size: 1.35rem;
      width: 4em;

      &:first-of-type {
        text-align: right;
      }
    }

    .controls-col {
      .label {
        flex: 1;
        text-align: center;
        width: auto;
        margin-bottom: 0.5rem;
      }

      input {
        margin-top: 0.5rem;
        font-size: 1.5rem;
        height: 3rem;
        width: 5rem;
        padding: 0.5rem;
      }
    }
  }
}

.player-selected-block,
.versus-separator {
  margin-bottom: 1rem;
}

.player-select-blocks {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.player-selected-block {
  > h3 {
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
  }
}

.versus-separator {
  font-size: 1.5rem;
  margin-bottom: 0;
}